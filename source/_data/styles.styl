// Custom styles.

body{
    // 设置背景图片
    background:url(../images/misc/bg.svg);
    background-repeat:repeat;
  }

@media (prefers-color-scheme: light) {
  :root {
    // 博客内容透明化
    --content-bg-color:rgba(255, 255, 255, 0.96);
  }
}

@media (prefers-color-scheme: dark) {
  :root {
    --content-bg-color:rgba(0, 0, 0, 0.88);
  }
  // img{
  //   filter: invert(1);
